pipeline{
    agent any
    tools {
        maven 'Maven' 
    }
        stages{
        stage("code test"){
            steps{
                checkout([$class: 'SubversionSCM', additionalCredentials: [], excludedCommitMessages: '', excludedRegions: '', excludedRevprop: '', excludedUsers: '', filterChangelog: false, ignoreDirPropChanges: false, includedRegions: '', locations: [[cancelProcessOnExternalsFail: true, credentialsId: 'SVN', depthOption: 'infinity', ignoreExternalsOption: true, local: '.', remote: 'http://192.168.146.142/svn/srk/sohel/e-proc-suite(V 2.0)']], quietOperation: true, workspaceUpdater: [$class: 'UpdateUpdater']])
                sh "mvn test"
            }
            }
            stage("Build"){
            steps{
                sh "mvn package"
            }
            }
            stage("Deploy on test"){
            steps{
                deploy adapters: [tomcat9(credentialsId: 'Tomcat', path: '', url: 'http://192.168.146.143:8080/')], contextPath: 'ROOT', onFailure: false, war: '**/ROOT.war'
            parameters {
            file 'application.properties'
            }
            }
            }
            stage("Deploy on prod"){
            steps{
                echo "========executing A========"
            }
            }
        }
    
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
